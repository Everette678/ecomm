<%= render :partial => '/admin/config/sub_header'%>

<h1>Tax Category</h1>

<div class=' pretty_table'>
  <table>
    <thead>
    <tr class='odd'>
      <th class='column1_header'>Name</th>
      <th></th>
      <th></th>
    </tr>
    </thead>

  <% @tax_categories.each do |tax_category| %>
    <tr class='<%= cycle("odd", "")%>'>
      <td><%= link_to tax_category.name, admin_config_tax_category_path(tax_category) %></td>
      <td><%= link_to 'Edit', edit_admin_config_tax_category_path(tax_category) %></td>
      <td><%= link_to 'Delete', admin_config_tax_category_path(tax_category), :data => { :confirm => 'Are you sure?' }, :method => :delete %></td>
    </tr>
  <% end %>
  </table>
</div>
<br />

<%= link_to 'New Tax status', new_admin_config_tax_category_path, :class => 'button' %>
