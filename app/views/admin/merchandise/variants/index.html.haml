= render :partial => '/admin/merchandise/sub_header'
-# content_for :head do
  = javascript_include_tag "admin/index_grid"
- content_for :sidemenu do
  .admin_filters
    = form_tag admin_merchandise_product_variants_path(@product), :method => 'get', :id => "variants_search" do
      %p
      %ul.search_boxes
        /
          <li><haml:loud> label_tag &amp;#39;product_name&amp;#39; </haml:loud> <haml:loud> text_field_tag :product_name, params[:product_name] </haml:loud></li>
        %li
          = label_tag 'sku'
          = text_field_tag :sku, params[:sku]
        /
          <li><haml:loud> label_tag &amp;#39;price&amp;#39; </haml:loud> <haml:loud> text_field_tag :price, params[:price] </haml:loud></li>
      %div{:style => "text-align:center"}
        = submit_tag "Search", :name => nil, :class => 'button red-button'
      #order_hidden
        = hidden_field_tag :direction, params[:direction]
        = hidden_field_tag :sort, params[:sort]
    .clearfix
%h2
  = @product.name
  Variants
#admin_variants_page_wrapper
  #admin_variants_grid_wrapper.pretty_table
    %table
      %thead
        %tr
          %th= "product_name"
          %th= sortable "sku"
          %th= "price"
      - @variants.each do |variant|
        %tr
          %td= link_to variant.product_name, edit_admin_merchandise_product_variant_path(@product, variant)
          %td= variant.sku
          %td= variant.price
    = will_paginate @variants
  #admin_new_variant_button.admin_new_button.last
    = link_to "New Variant", new_admin_merchandise_product_variant_path(@product), |
      :class  => "button green",                                                   |
      :id     => "new_product_button"                                              |
  #admin_product_button.admin_product_button.last
    = link_to "View Product", admin_merchandise_product_path(@product), |
      :class  => "button spade",                                        |
      :id     => "new_product_button"                                   |
